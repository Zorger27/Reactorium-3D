{
  "version": 2,
  "rewrites": [
    {
      "source": "/ogimage/:path*",
      "destination": "/ogimage/:path*"
    },
    {
      "source": "/",
      "destination": "/api/og",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(bot|crawler|spider|crawling|facebookexternalhit|twitterbot|linkedinbot|slackbot|whatsapp|telegram|pinterest|discord|facebot).*"
        }
      ]
    },
    {
      "source": "/",
      "destination": "/api/og",
      "has": [
        {
          "type": "query",
          "key": "lang"
        }
      ]
    },
    {
      "source": "/((?!api|ogimage|_next|favicon\\.ico|robots\\.txt|sitemap\\.xml).*)",
      "destination": "/api/og",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(bot|crawler|spider|crawling|facebookexternalhit|twitterbot|linkedinbot|slackbot|whatsapp|telegram|pinterest|discord|facebot).*"
        }
      ]
    },
    {
      "source": "/((?!api|ogimage|_next|favicon\\.ico|robots\\.txt|sitemap\\.xml).*)",
      "destination": "/api/og",
      "has": [
        {
          "type": "query",
          "key": "lang"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": false
}